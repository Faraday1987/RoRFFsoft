  <div class="card shadow mb-4">
    <!-- Card Header  -->
    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
      <h6 class="m-0 font-weight-bold text-primary">Productos</h6>
    </div>
    <!-- Card Body -->
    <div class="card-body">
      <div class="pt-2 pb-2">
        <div class="row">
          <div class="col-xl-10 col-lg-10 align-items-center justify-content-center">
            <%= form_with url: products_path, method: :get do |form| %>
              <div class="item form-group">
                <div class="input-group">
                  <%= form.text_field :query_text, value: params[:query_text], placeholder: 'Buscar Producto', class: 'form-control', type: :search %>
                </div>
              </div>
              <%= form.submit 'Buscar', class: 'btn btn-primary' %>
            <% end %>
          </div>
          <div class="col-xl-2 col-lg-2">
          </div>
        </div>
        <div id="tablaClientes" class="table-responsive compact">
          <table class="table" width="100%" cellspacing="0">
            <thead>
              <tr>
                <th>Imagen</th>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>existence</th>
                <th>realprice</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% if @resultados.present? %>
                <% @resultados.each do |product| %>
                  <tr id="<%= product.id %>">
                    <td>
                      <div class="media">
                        <%= image_tag(valid_image_url?(product.imagen) ? product.imagen : 'no-image.png', alt: 'img', class: 'brand-image', width: 42, height: 42) %>
                      </div>
                    </td>
                    <td>
                      <%= product.nombre %>
                    </td>
                    <td>
                      <%= product.description %>
                    </td>
                    <td>
                      <%= product.existence %>
                    </td>
                    <td>
                      <%= product.realprice %>
                    </td>
                    <td>
                      <%= link_to 'Agregar', sales_path, class: "btn btn-info btn-xs" %>
                    </td>
                  </tr>
                <% end %>
              <% else %>
                <tr>
                  <td colspan="12">Resultados de la búsqueda</td>
                  <td></td>
                  <td></td>
                  <td></td>
                  <td></td>
                  <td></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
