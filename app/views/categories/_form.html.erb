<%= form_with model: @categoria do |f| %>
  <div class="card mb-4">
    <div class="card-body">
      <div class="card shadow mb-4">
        <div class="card-header py-3">
          <h6 class="m-0 text-darkl">Datos de la categoría:</h6>
        </div>
        <div class="card-body">


          <div class="form-group">
          </div>
          <div class="item form-group<%= @categoria.errors[:nombre].any? ? ' has-error has-feedback' : '' %>">
            <%= f.label :nombre, "Nombre de Categoría: " %>
            <div class="input-group">
              <%= f.text_field :nombre, {:class=> "form-control", :placeholder=>"Introduzca el nombre de la categoría...",  :required=>true } %>
              <%if @categoria.errors[:nombre].any? %>
                <p class="bg-danger"><%= @categoria.errors[:nombre].to_s[/\w([^"]*)/] %></p>
              <% end %>
            </div>
          </div>
          <div class="item form-group<%= @categoria.errors[:descripcion].any? ? ' has-error has-feedback' : '' %>">
            <%= f.label :descripcion, "Descripción de la categoría: " %>
            <div class="input-group">
              <%= f.text_area :descripcion, {class: "form-control", :placeholder=>"Introduzca la descripción de la categoría...", :required=>true } %>
              <%if @categoria.errors[:descripcion].any? %>
                <p class="bg-danger"><%= @categoria.errors[:descripcion].to_s[/\w([^"]*)/] %></p>
              <% end %>
            </div>
          </div>
          <div class="item form-group<%= @categoria.errors[:imageurl].any? ? ' has-error has-feedback' : '' %>">
            <%= f.label :imageurl, "Imagen de Categoría: " %>
            <div class="input-group">
              <%= f.text_field :imageurl, {:class=> "form-control", :placeholder=>"Opcional url de imagen..." } %>
              <%if @categoria.errors[:imageurl].any? %>
                <p class="bg-danger"><%= @categoria.errors[:imageurl].to_s[/\w([^"]*)/] %></p>
              <% end %>
            </div>
          </div>
          <div class="actions col-md-9 col-sm-9 col-xs-12 col-md-offset-3">
            <%= f.submit @categoria.new_record? ? "Crear Categoría" : "Actualizar Categoría", :class => "btn btn-success mr-3"%>
            <%=link_to "Regresar", categories_path, html_options = { class: 'btn btn-link btn-sm mr-3'}%>
          </div>


        </div>
      </div>
    </div>
  </div>
<% end %>
